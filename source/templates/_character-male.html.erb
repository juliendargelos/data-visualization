      <g transform="translate(30, 120)">
        <%= character_part :leg, :left, [:flexibility, :swimming, :displacement, :chilling] %>
          <rect fill="#FFD8C2" x="30" y="60" width="30" height="30"></rect>
          <path d="M45,0 C53.2842712,0 60,6.70811389 60,15.0050808 L60,60 L30,60 L30,15.0050808 C30,6.71800351 36.7139073,0 45,0 L45,0 Z" fill="#264C10"></path>
